<div class="jumbotron" style="text-align: center;">
  <div class="container">
    <h1>Let's Eat Burgers</h1>
  </div>
</div>

<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Burgers that are ready to be eaten</h3>
    </div>
    <div class="panel-body">
      {{#each burgers}}
      {{#unless this.devoured}}
      <div class="well">

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <br />
          <span>{{this.id}}. {{this.burger_name}}<button type="submit" class="btn btn-primary" style="margin-left: 20px;">Eat
              it!</button></span>
        </form>
        <br />
      </div>
      {{/unless}}
      {{/each}}
    </div>
  </div>
</div>

<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Create a Burger</h3>
    </div>
    <div class="panel-body">
      <form class="create-update-form" action="burgers/create" method="POST">
        <div class="form-group">
          <label for="newBurger">Burger Name:</label>
          <input type="hidden" name="devoured" value="0">
          <input type="text" id="newBurger" name="burger_name">
          <br />
          <br />
          <button type="submit" class="btn btn-primary center-block">Cook It Up!</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Burger Graveyard (have been eaten)</h3>
    </div>
    <div class="panel-body">
      {{#each burgers}}
      {{#if this.devoured}}
      {{this.id}}. {{this.burger_name}}
      <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="false">
      </form>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>